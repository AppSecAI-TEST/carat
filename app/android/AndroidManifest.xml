<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.berkeley.cs.amplab.carat.android"
    android:versionCode="4"
    android:versionName="@string/version_name" >

    <uses-sdk android:minSdkVersion="8"
        android:targetSdkVersion="10" />
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.BATTERY_STATS"/>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name" android:name="CaratApplication">
        
        <activity
            android:name=".CaratMainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".CaratSuggestionsActivity"
            android:label="@string/app_name" >
        </activity>
        <!-- Info and later button to kill apps -->
        <activity
            android:name=".CaratKillAppActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".CaratMyDeviceActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".CaratBugsActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name=".CaratHogsActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name=".CaratAboutActivity"
            android:label="@string/app_name" >
        </activity>
         <activity
            android:name=".BatteryInfoMonitorActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>